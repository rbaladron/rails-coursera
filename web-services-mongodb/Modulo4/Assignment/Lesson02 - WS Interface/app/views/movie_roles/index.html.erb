<p id="notice"><%= notice %></p>

<h1>Listing Movie Roles</h1>

<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Actor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_roles.each do |movie_role| %>
      <tr>
        <td><%= movie_role.character %></td>
        <td><%= movie_role.actor_id %></td>
        <td><%= link_to 'Show', movie_role_path(@movie, movie_role) %></td>
        <td><%= link_to 'Edit', edit_movie_role_path(@movie, movie_role) %></td>
        <td><%= link_to 'Destroy', movie_role_path(@movie, movie_role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

