<p id="notice"><%= notice %></p>

<h1>Listing Movie Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie_page| %>
      <tr>
        <td><%= movie_page.title %></td>
        <td><%= link_to 'Show', movie_page %></td>
        <td><%= link_to 'Edit', edit_movie_page_path(movie_page) %></td>
        <td><%= link_to 'Destroy', movie_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

